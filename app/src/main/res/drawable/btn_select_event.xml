<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item
        android:state_pressed="false">
        <shape >
            <stroke
                android:width="1dp"
                android:color="#4b4c4c"/>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape >
            <stroke
                android:width="1dp"
                android:color="#4b4c4c"/>
            <solid
                android:color="#B3B2B2"/>
        </shape>
    </item>
</selector>

